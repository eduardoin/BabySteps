function refreshForm(innerHTML) {
  const newReviewForm = document.querySelector('#modal<%= @episode.type %> form');
  newReviewForm.innerHTML = innerHTML;
}

<% if @episode.errors.any? %>
  refreshForm('<%= j render "episodes/form", kid: @kid, episode: @episode %>');
<% else %>
  document.querySelector('#modal<%= @episode.type %> .close').click();
  window.swal("Updated <%= @episode.title %>!", {
    buttons: false,
    timer: 1500,
    icon: 'success'
  });
  setTimeout(() => { location.reload() }, 1500);
<% end %>
