<div class="new-kid-margin">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-6 offset-xl-3">
        <div class="new-kid-card">
          <div class="new-kid-content">
            <%= simple_form_for @kid do |f| %>
              <div class="form-inputs">
                <%= f.input :name %>
                <%= f.input :gender, collection: Kid::GENDERS %>
                <%= f.input :born_at, start_year: Date.today.year - 20, end_year: Date.today.year, html5: true, input_html: {class: "flatpickr-input"} %>
                <%= f.input :photo %>
                <%= f.input :photo_cache, as: :hidden %>
              </div>
              <div class="form-actions new-kid-btn">
                <%= f.button :submit,'Add a new kid' %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

