<div class="modal fade" id="shareModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <div class="modal-episode-type">
          <div class="modal-draw">
            <div class="modal-string"></div>
            <div class= "modal-share-badge" >
              <div class= "modal-share-icon">
                <%= svg_tag "babysteps-share.svg" %>
              </div>
            </div>
          </div>
          <h5 class="modal-title" id="exampleModalCenterTitle">Share</h5>
        </div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <%= svg_tag "modal-close.svg" %>
        </button>
      </div>
      <div class="modal-body modal-share">
        <p class="share-text">Send this link to the pediatrician or another physician responsible for checking <%= @kid.name %>. The person will be able to access the child's full log.</p>
        <textarea id="sharelink">www.babysteps.tech/share/<%= @kid.token %></textarea>
      </div>
      <div class="modal-footer">
        <button class="btn btn-episode btn-share" data-clipboard-action="copy" data-clipboard-target="#sharelink">Copy to clipboard
        </button>
      </div>
    </div>
  </div>
</div>

