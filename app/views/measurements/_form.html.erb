<%= simple_form_for [kid, measurement], remote: true, url: kid_measurements_path(kid), as: 'measurement' do |form| %>
  <div class="modal-body modal-medication">
    <%= form.input :measured_at, label: false, html5: true, input_html: { value: Time.now.strftime("%Y-%m-%dT%H:%M") } %>
    <%= form.input :type, as: :hidden, value: measurement.type %>
    <%= form.input :value %>
  </div>
  <div class="modal-footer">
    <%= form.button :submit, 'Save', class: "btn btn-episode btn-medication" %>
  </div>
<% end %>
